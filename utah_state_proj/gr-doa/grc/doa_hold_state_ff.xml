<?xml version="1.0"?>
<block>
  <name>Hold State</name>
  <key>doa_hold_state_ff</key>
  <category>[doa]</category>
  <import>import doa</import>
  <make>doa.hold_state_ff($state, $scale0, $scale1)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>State</name>
    <key>state</key>
    <value>0</value>
    <type>int</type>
  </param>

  <param>
    <name>Scale 0</name>
    <key>scale0</key>
    <value>-1</value>
    <type>float</type>
  </param>

  <param>
    <name>Scale 1</name>
    <key>scale1</key>
    <value>0</value>
    <type>float</type>
  </param>
  
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>float</type>
  </sink>

  <sink>
    <name>state</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
